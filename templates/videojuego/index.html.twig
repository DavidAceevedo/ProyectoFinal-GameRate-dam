{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <h1>Cat√°logo de Videojuegos</h1>

    <form action="{{ path('app_videojuego_index') }}" method="get" class="row g-3 mb-4">
        <div class="col-auto">
            <input type="text" name="q" class="form-control" placeholder="Buscar juego...">
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
    </form>

    <div class="row">
        {% for juego in videojuegos %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="{{ juego.imagen }}" class="card-img-top" alt="{{ juego.titulo }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ juego.titulo }}</h5>
                        <p class="badge bg-info">{{ juego.categoria }}</p>
                        <p class="card-text">{{ juego.descripcion|slice(0, 100) }}...</p>
                        <a href="{{ path('app_videojuego_show', {id: juego.id}) }}" class="btn btn-outline-primary">Ver detalles</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p>No se encontraron videojuegos.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
