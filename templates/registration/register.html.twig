{% extends 'base.html.twig' %}

{% block title %}Registro - GameRate{% endblock %}

{% block body %}
<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card p-4 shadow-sm">
            <h1 class="h3 mb-3 text-center">Crear Cuenta Nueva</h1>

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.nombre) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword) }}

                <button type="submit" class="btn btn-success w-100 mt-3">Registrarse</button>
            {{ form_end(registrationForm) }}

            <div class="mt-3 text-center">
                <a href="{{ path('app_login') }}">¿Ya tienes cuenta? Entra aquí</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
